<html class="nutrients">
<div class="flex flex-row bg-gray-100 justify-between shadow">
    <h1 class = "bg-gray-900 text-white p-5 px-10 text-xl shadow">Scorn-u-copia</h1>
    {{#if isloggedin}}
        <div class = "flex flex-row">
            <a class="bg-teal-300 text-white p-5 text-lg shadow" href="/profile">profile</a>
            <a class="bg-teal-300 text-white p-5 text-lg shadow" href="/logout">log out</a>
        </div>
    {{/if}}
    {{#unless isloggedin}}
        <div class = "flex flex-row">
            <a class="bg-teal-300 text-white p-5 text-lg shadow" href="/login">login</a>
            <a class="bg-teal-300 text-white p-5 text-lg shadow" href="/signup">signup</a>
        </div>
    {{/unless}}
</div>

<div class="searchbox flex flex-col bg-white shadow">
    <h1 class="bg-gray-900 text-white p-5 px-10 text-xl shadow">Search an ingredient to analyze it</h1>
    <div class="flex justify-around py-10">
        <form>
            <input type="text" class="bg-yellow-200 pl-5 pr-10 py-2" rows="12" id="nutrientSearch" height="200"
                placeholder="e.g. slice of bread">
            <input type="submit" id="submitNutrients" value="">
        </form>
    </div>
</div>


<div class="nutrientInfo">

<section class="performance-facts">
  <header class="performance-facts__header">
    <h1 class="performance-facts__title">Nutrition Facts</h1>
  </header>
  <table class="performance-facts__table">
    <thead>
      <tr>
        <th colspan="3" class="small-info">
          Amount Per Serving
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th colspan="2">
          <b>Calories <div class="calories"></div></b>
        </th>
      </tr>
      <tr class="thick-row">
        <td colspan="3" class="small-info">
          <b>% Daily Value*</b>
        </td>
      </tr>
      <tr>
        <th colspan="2">
          <b>Total Fat</b>
          <div class="fat"></div>
        </th>
        <td>
          <b><div class="fatper"></div></b>
        </td>
      </tr>
      <tr>
        <td class="blank-cell">
        </td>
        <th>
          Saturated Fat
          <div class="satfat"></div>
        </th>
        <td>
          <b><div class="satfatper"></div></b>
        </td>
      </tr>
      <tr>
        <td class="blank-cell">
        </td>
        <th>
          Trans Fat
          <div class="tranfat"></div>
        </th>
        <td>
        </td>
      </tr>
      <tr>
        <th colspan="2">
          <b>Cholesterol</b>
          <div class="chol"></div>
        </th>
        <td>
          <b><div class="cholper"></div></b>
        </td>
      </tr>
      <tr>
        <th colspan="2">
          <b>Sodium</b>
          <div class="sodium"></div>
        </th>
        <td>
          <b><div class="sodiumper"></div></b>
        </td>
      </tr>
      <tr>
        <th colspan="2">
          <b>Total Carbohydrate</b>
          <div class="carbs"></div>
        </th>
        <td>
          <b><div class="carbsper"></div></b>
        </td>
      </tr>
      <tr>
        <td class="blank-cell">
        </td>
        <th>
          Dietary Fiber
          <div class="fiber"></div>
        </th>
        <td>
          <b><div class="fiberper"></div></b>
        </td>
      </tr>
      <tr>
        <td class="blank-cell">
        </td>
        <th>
          Sugars
          <div class="sugars"></div>
        </th>
        <td>
        </td>
      </tr>
      <tr class="thick-end">
        <th colspan="2">
          <b>Protein</b>
          <div class="protein"></div>
        </th>
        <td>
        </td>
      </tr>
    </tbody>
  </table>
    
</div>

</html>